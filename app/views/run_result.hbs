<!doctype html>
<html lang="en">
  <head>
    {{> head}}

    <title>{{title}}</title>
    </head>
    <body>
        {{> menu_signed}}
        <div id="dataform-wrapper">
            <div id="dataForm">
                    <form id="my_form">
                    <div class="form-group">
                    <legend class="m-b-1">Добавить вид на соревнованиях</legend>
                        <div class="form-group">
                            <label for="result">Результат</label>
                            <input class="form-control" id="result" type="time" step="1"/>
                        </div>    
                    </div>
                            <input class = "btn btn-primary" id="changeResult" type="button" value="Сохранить" />
                            <input class = "btn btn-secondary" id="cancelButton" type="button" value="Отмена"/>
                    </form>
            </div> 
        </div> 

        <div id="overlay"></div>
        <div id="wrapper">            
            {{> table_nav}}
            <div id="page-content-wrapper">
                <label for="competition">Соревнования</label>  
                <select class="form-control competition" id="competitionsSelect">
                    {{#each competitions}}
                        <option value="{{this.id}}">{{this.name}}</option>
                    {{/each}}                                    
                </select>                    
                <label for="type">Вид</label>  
                <select class="form-control type"  id="athleticsType">
                    {{#each athletics}}
                        <option value="{{this.id}}">{{this.athletics_type.name}} - {{this.gender_type.gender_type}}</option>
                    {{/each}}                          
                </select>
                <div class="container-fluid">
                    <h1>{{title}}</h1>
                    <p>Спортсмены</p>     
                    <a href="#menu-toggle" class="btn btn-secondary" id="menu-toggle">Приступить к редактированию</a>
                    <div style="width: 80%; position:absolute; left:5%; margin-top:30px"></div>
                        <div class="div-table">
                            <table class="table table-hover"  id = "table">
                                <thead>
                                    <tr>
                                    {{#each tableHead}}
                                        <th>{{this}}</th>
                                    {{/each}}
                                    </tr>
                                </thead>
                                <tbody>
                                {{#each results}}
                                    <tr data-id="{{this.id}}">
                                        <td>{{this.run.number}}</td>
                                        <td>{{this.track}}</td>
                                        <td>{{this.athlete_card.athlete.last_name}} {{this.athlete_card.athlete.first_name}} {{this.athlete_card.athlete.middle_name}}</td>
                                        <td>{{this.result}}</td>
                                        <td>
                                            <button class="btn btn-primary changeResult">Результат</button>
                                        </td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>                            
        {{> script}}
    </body>
</html>